  body(id=bodyid)
    #header
      #banner
        a(href='/how')
          img(src='/images/banner.png')
      #logo
        a(href='/')
          img(src='/images/logo_foobar.png')
    #main
      #nav
        ul
          li
            a(href='http://foobmv.cloudfoundry.com')
              span.nav_header Explore
              br
              span.nav_subhead products
          li#nav_contest
            a(href='#')
              span.nav_header Join
              br
              span.nav_subhead the contest
          li#nav_gallery
            a#gallerylink(href='/gallery')
              span.nav_header View
              br
              span.nav_subhead the contest gallery
          li
            #nav_download
              a(href='#')
                span.nav_header Download
                br
                span.nav_subhead the mobile apps
            #nav_icons_mobile
              ul
                li#nav_icon_android
                  a(href='#')
                li#nav_icon_apple
                  a(href='#')
          li
            #nav_cart
              ul
                li#nav_icon_cart
                  a(href='http://foobmv.cloudfoundry.com/cart')
          li#nav_last
      #content
      block content
      #icons_sharing
        a(href='#', onclick='return gclick()')
          img#google(src='/images/icon_social_g+.png')
        a(href='https://twitter.com/intent/tweet?text=Check out the Foo Bar from Cloud Foundry&url=http://foobarbar.cloudfoundry.com&related=cloudfoundry', onclick='return poptweet(\'https://twitter.com/intent/tweet?text=Check out the Foo Bar from Cloud Foundry&url=http://foobarbar.cloudfoundry.com&related=cloudfoundry\')')
          img#twitter(src='/images/icon_social_twitter.png')
        a(href='http://www.facebook.com/share.php?u=<;url>', onclick='return fbs_click()')
          img(src='/images/icon_social_fb.png')
